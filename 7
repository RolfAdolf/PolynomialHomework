1)
P = [1 -6 15 -14];
R = roots(P);
realroots = R((imag(R) == 0));
Rmax=max( abs( real( roots(P) ) ) )+1;
Rmin=min(abs(real(roots(P))))-1;
x = linspace(Rmin, Rmax, round(abs(Rmax - Rmin))/0.01);
plot(x, polyval(P, x), realroots, 0, '*');

2)
P = [10 -13 15 -18 -24];
R = roots(P);
realroots = R((imag(R) == 0));
Rmax=max( abs( real( roots(P) ) ) )+1;
Rmin=min(abs(real(roots(P))))-1;
x = linspace(Rmin, Rmax, round(abs(Rmax - Rmin))/0.01);
plot(x, polyval(P, x), realroots, 0, '*');
